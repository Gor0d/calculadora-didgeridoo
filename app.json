{
  "expo": {
    "name": "Didgemap - Calculadora Didgeridoo",
    "slug": "didgemap-calculadora",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "description": "Calculadora profissional de didgeridoo com análise acústica avançada, visualização de geometria e preview sonoro em tempo real.",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.didgemap.app",
      "buildNumber": "1",
      "requireFullScreen": false,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Este app usa o microfone para análise acústica de didgeridoo (opcional).",
        "NSCameraUsageDescription": "Este app pode usar a câmera para capturar medidas (opcional)."
      },
      "associatedDomains": [
        "applinks:didgemap.app"
      ],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.didgemap.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.didgemap.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Didgemap",
      "shortName": "Didgemap",
      "lang": "pt-BR",
      "scope": "/",
      "themeColor": "#6366F1",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": ".",
      "bundler": "metro"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 30000,
      "url": "https://u.expo.dev/cad4f3a7-4b85-4cf7-bc47-f276f23ec2c6"
    },
    "extra": {
      "eas": {
        "projectId": "cad4f3a7-4b85-4cf7-bc47-f276f23ec2c6"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
