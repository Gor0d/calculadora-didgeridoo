{
  "expo": {
    "name": "Didgemap - Calculadora Didgeridoo",
    "slug": "didgemap-calculadora",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "primaryColor": "#6366F1",
    "description": "Calculadora profissional de didgeridoo com análise acústica avançada, visualização de geometria e preview sonoro em tempo real.",
    "keywords": ["didgeridoo", "music", "acoustic", "calculator", "analysis", "sound"],
    "privacy": "public",
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.didgemap.app",
      "buildNumber": "1",
      "requireFullScreen": false,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Este app usa o microfone para análise acústica de didgeridoo (opcional).",
        "NSCameraUsageDescription": "Este app pode usar a câmera para capturar medidas (opcional)."
      },
      "associatedDomains": ["applinks:didgemap.app"],
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.didgemap.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.didgemap.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Didgemap",
      "shortName": "Didgemap",
      "lang": "pt-BR",
      "scope": "/",
      "themeColor": "#6366F1",
      "backgroundColor": "#ffffff",
      "display": "standalone",
      "orientation": "portrait",
      "startUrl": ".",
      "bundler": "metro"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 30000
    },
    "extra": {
      "eas": {
        "projectId": "12345678-1234-1234-1234-123456789abc"
      }
    }
  }
}
